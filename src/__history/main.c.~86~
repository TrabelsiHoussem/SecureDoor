char mp[12],monmp[11]="1234567890";
int i=1;
int1 p=0;
int k=0;
void main()
{ port_b_pullups(TRUE); 
  lcd_init();
   kbd_init();
   

   lcd_putc("\fSarraDebbabi\nBinome");
   delay_ms(3000);

   lcd_putc("\f");
   lcd_putc("Mot de passe:");
   enable_interrupts(GLOBAL);
   enable_interrupts(INT_TIMER0); //a verfier 
   
while(true){

   while(!(mp[i]=kbd_getc()));

   lcd_gotoxy(i,2);
   lcd_putc(mp[i]);
    if (i==10)
      {i=0;
       p=0;
       lcd_gotoxy(1,2);
       lcd_putc("\fVerification.. " ); 
       delay_ms(1000);
       for (i=0;i<10;i++)
            {  lcd_gotoxy(1,1);
               printf(lcd_putc,"%s",monmp[i]);
               if (mp[i] != monmp[i-1]) 
               {
               p=1;
               } 
            }
    
    if ( p==0)
        {output_high(pin_a0);
        delay_ms(1000);
         lcd_gotoxy(1,1); 
         lcd_putc("\fmp correcte :)");
         output_low(pin_a1);
         }


    if ( p==1 && k<3)
       { 
       lcd_gotoxy(1,1);
        lcd_putc("\fmp incorrecte!" );
        delay_ms(1000);
        output_high(pin_a1) ;
        output_low(pin_a0);
        
       
        output_high(pin_a2) ;
        delay_ms(1000);
        output_low(pin_a2) ;
        delay_ms(1000);
        output_high(pin_a2) ;
        delay_ms(1000);
        output_low(pin_a2) ;
        delay_ms(1000);
        output_high(pin_a2) ;
        delay_ms(1000);
        output_low(pin_a2) ;
 }
         
       }
    
   i=0;
   p=0;
    
    }
   i=i+1;
  
   


}

}




















